@model projekt_programowanie.DTOs.AddServiceDto

<h3>Dodaj usługę</h3>

@using (Html.BeginForm("AddServices", "Worker", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model=>model.ServiceName,"Nazwa usługi")
        @Html.TextBoxFor(model => model.ServiceName, new { @class = "form-control"})

        <p style="color:red"><span asp-validation-for=ServiceName></span></p>
    </div>
    <div class="form-group">
        @Html.LabelFor(model=>model.ServiceDuration,"Czas wykonywania usługi")
        @Html.TextBoxFor(model => model.ServiceDuration, new { @class = "form-control", @type="time"})

        <p style="color:red"><span asp-validation-for=ServiceDuration></span></p>
    </div>
    <div class="form-group">
        @Html.LabelFor(model=>model.ServicePrice,"Cena usługi")
        @Html.TextBoxFor(model => model.ServicePrice, new { @class="form-control", @type = "tel" })

        <p style="color:red"><span asp-validation-for=ServicePrice></span></p>
    </div>
    <input type="submit" class="btn btn-primary " value="Dodaj" />
}
    