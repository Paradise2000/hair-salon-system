@model projekt_programowanie.DTOs.RegisterDto

<h3>Rejestracja konta klienta</h3>

@using (Html.BeginForm("RegisterClient", "Account", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model=>model.FirstName,"Imię")
        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(model=>model.LastName,"Nazwisko")
        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(model=>model.Phone,"Telefon")
        @Html.TextBoxFor(model => model.Phone, new { @class="form-control", @type = "tel" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model=>model.Email,"Email")
        @Html.TextBoxFor(model => model.Email, new { @class="form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model=>model.Password,"Hasło")
        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "Password"  })
    </div>
    <input type="submit" class="btn btn-primary " value="Submit" />
}